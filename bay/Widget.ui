<class version="1.0"
	name="Runtime.Web.App.Widget" extends="Runtime.Web.Component" 
	module="Runtime.Web.App" model="Runtime.Web.App.PageModel"
>

<use name="Runtime.Web.Message" />
<use name="Runtime.Web.Events.BaseEvent" />


<script>


/**
 * Returns widget key
 */
string getWidgetKey() => this.params["widget_key"];



/**
 * Returns true if need to repaint component
 */
bool isRepaint()
{
	if (this.is_new_element)
	{
		return true;
	}
	/* Check widget model */
	string widget_key = this.params["widget_key"];
	primitive old_model = this.old_model["widgets"][widget_key];
	primitive new_model = this.new_model["widgets"][widget_key];
	if (new_model != old_model)
	{
		return true;
	}
	/* Check component params */
	if (not this.equalParams())
	{
		return true;
	}
	/* Check watch model */
	if (this.isRepaintWatch())
	{
		return true;
	}
	return false;
}



/**
 * Handle widget event
 */
async void handleEvent(Message<BaseEvent> msg)
{
}



/**
 * Returns widget model
 */
primitive widgetModel(Collection model_path = null, var def_val = null)
{
	if (model_path == null) model_path = [];
	string widget_key = this.params["widget_key"];
	Collection widget_path = ["widgets", widget_key];
	return this.model(widget_path.concat(model_path), def_val);
}



/**
 * Update model
 */
void widgetUpdate(string method_name = "")
{
	/* Get widget key */
	string widget_key = this.params["widget_key"];
	
	/* Get function arguments */
	var args = new Vector();
	#ifcode JAVASCRIPT then
	for (var i=((typeof ctx == "undefined") ? 1 : 2); i<arguments.length; i++) args.pushValue(ctx, arguments[i]);
	#endif
	
	/* Get current model */
	primitive model = this.model(["widgets", widget_key]);
	
	/* Update model */
	model = static::updateModel(model, method_name, args.toCollection());
	
	/* Set new model */
	this.driver.updateModel(this.model_path.concat(["widgets", widget_key]), model);
}

</script>

</class>